@model WebSiteMjr.ViewModels.CheckinToolTabViewModel

@{
    ViewBag.Title = "Movimentação da Ferramenta";
    Layout = "";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Movimentação</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.HolderName, "Funcionário/Condomínio")
        </div>
        <div class="editor-field">
            @Html.ValidationMessage("HolderNotExists")
            @Html.EditorFor(model => model.HolderName, new { id = "EmployeeCompanyHolder_Name" })
            @Html.ValidationMessageFor(model => model.HolderName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CompanyAreaName, "Área do Condomínio")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CompanyAreaName, new { id = "CompanyArea_Name" })
            @Html.ValidationMessageFor(model => model.CompanyAreaName)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Informer, "Informante")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Informer, new { id = "Informer" })
            @Html.ValidationMessageFor(model => model.Informer)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StrCheckinDateTime, "Data do Checkin")
        </div>
        <div class="editor-field">
            @Html.ValidationMessage("DateExists")
            @Html.TextBoxFor(model => model.StrCheckinDateTime, new { id = "CheckinDateTime" })
            @Html.ValidationMessageFor(model => model.StrCheckinDateTime)
        </div>
        
        @Html.HiddenFor(model => model.ToolId)

        <p>
            <input type="submit" value="Cadastrar" />
        </p>

    </fieldset>
}

@if (Model != null && Model.CheckinTools != null && Model.CheckinTools.Any())
{
    <table id="Grid" class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    Ferramenta
                </th>
                <th>
                    Funcionário/Condomínio
                </th>
                <th>
                    Área do Condomínio
                </th>
                <th>
                    Data do Checkin
                </th>
                <th class="filter-false sorter-false">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CheckinTools)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToolName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeCompanyHolderName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyAreaName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CheckinDateTime)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", "CheckinTool", new { id = item.Id }, new { @class = "fa fa-pencil-square-o" })
                        @Html.ActionLink(" ", "Details", "CheckinTool", new { id = item.Id }, new { @class = "fa fa-square-o" })
                        @Html.ActionLink(" ", "Delete", "CheckinTool", new { id = item.Id }, new { @class = "fa fa-trash-o" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div id="pager" class="pager">
        <form>
            <img src="../../Content/themes/base/images/pager/icons/first.png" class="first" />
            <img src="../../Content/themes/base/images/pager/icons/prev.png" class="prev" />
            <span class="pagedisplay"></span> <!-- this can be any element, including an input -->
            <img src="../../Content/themes/base/images/pager/icons/next.png" class="next" />
            <img src="../../Content/themes/base/images/pager/icons/last.png" class="last" />
            <select class="pagesize">
                <option selected="selected" value="10">10</option>
                <option value="20">20</option>
                <option value="30">30</option>
                <option value="40">40</option>
            </select>
        </form>
    </div>
}
else
{
    <h3>Nenhum Checkin Encontrado</h3>
}

<script src="@Url.Content("~/Scripts/Mask/Masks.js")"></script>
<script src="@Url.Content("~/Scripts/Tool/checkinTab.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.tablesorter.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.tablesorter.pager.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.tablesorter.widgets.js")"></script>
<script src="@Url.Content("~/Scripts/MjrJsComponents/MjrGrid.js")"></script>