
<!DOCTYPE html>
<html lang="pt">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Mjr Equipamentos eletrônicos</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("MJR Equipamentos Eletrônicos", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Action("UserInformations", "Account")
                        @*@Html.Partial("_LoginPartial", WebSiteMjr.Domain.Model.Membership.User)*@
                    </section>
                    <nav>
                        @Html.Action("Menu", "Account")
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - MJR Equipamentos eletrônicos LTDA</p>
                    <p>CNPJ: 32.143.406/0001-10</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", false)
    </body>
</html>
