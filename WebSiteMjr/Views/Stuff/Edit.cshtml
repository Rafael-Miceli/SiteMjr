@model WebSiteMjr.ViewModels.EditStuffsViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Material</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StuffManufactures)
            </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.StuffManufactureId, Model.StuffManufactures)
            @Html.ValidationMessageFor(model => model.StuffManufactureId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StuffCategories)
            </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.StuffCategorieId, Model.StuffCategories )
            @Html.ValidationMessageFor(model => model.StuffCategorieId)
        </div>

        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Save" />
        </p>
        
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar a listagem", "Index")
</div>

