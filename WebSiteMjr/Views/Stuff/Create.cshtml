@model WebSiteMjr.ViewModels.StuffsViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Material</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StuffManufactures)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.StuffManufactureId, Model.StuffManufactures)
            @Html.ValidationMessageFor(model => model.StuffManufactureId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StuffCategories)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.StuffCategorieId, Model.StuffCategories)
            @Html.ValidationMessageFor(model => model.StuffCategorieId)
        </div>


        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

