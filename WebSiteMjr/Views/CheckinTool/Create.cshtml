@model WebSiteMjr.ViewModels.CreateCheckinToolViewModel

@{
    ViewBag.Title = "Cadastrar Chekin de Ferramenta";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Buscar Checkin</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ToolName, "Ferramenta")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ToolName, new { id = "Tool_Name" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EmployeeCompanyHolderName, "Funcionário/Condomínio")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EmployeeCompanyHolderName, new { id = "EmployeeCompanyHolder_Name" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CheckinDateTime, "Data do Checkin")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CheckinDateTime, new { id = "Date" })
        </div>

        <p>
            <input type="submit" value="Cadastrar" />
        </p>

    </fieldset>
}

<div>
    @Html.ActionLink("Voltar a busca de Checkins", "Index")
</div>

@section scripts
{
    <script src="@Url.Content("~/Scripts/Mask/Masks.js")"></script>
<script src="@Url.Content("~/Scripts/CheckinTool/checkinTool.js")"></script>
}