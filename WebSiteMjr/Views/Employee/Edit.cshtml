@model WebSiteMjr.Domain.Model.Employee

@{
    ViewBag.Title = "Editar Funcionário";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Funcionário</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name, "Nome")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.LastName, "Sobrenome")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Phone, "Celular")
        </div>

        @*// ==== Azeite no código ====*@

        <div class="editor-field1">
            @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>
        
        @*// ==== Azeite no código ====*@
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Email, "E-Mail")
        </div>
        <div class="editor-field">
            @Html.ValidationMessage("EmailExists")
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        @Html.HiddenFor(model => model.Id)
        
        <p>
            <input type="submit" name="submitButton" value="CriarLogin" />
        </p>

        <p>
            <input type="submit" name="submitButton" value="Atualizar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar a listagem", "Index")
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Mask/Masks.js")"></script>
}