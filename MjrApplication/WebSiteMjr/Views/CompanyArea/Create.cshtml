@model WebSiteMjr.Domain.Model.CompanyArea
    
@{
    ViewBag.Title = "Cadastrar Área de Condomínios/Empresas";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "CompanyArea", FormMethod.Post, new { id = "createCompanyAreaForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Área de Condomínios/Empresas</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name, "Nome")
        </div>
        <div class="editor-field">
            @Html.ValidationMessage("CompanyAreaExists")
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <p>
            <input type="submit" value="Cadastrar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar a listagem", "Index")
</div>